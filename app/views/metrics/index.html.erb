<p id="notice"><%= notice %></p>

<h1>Metrics</h1>

<table>
  <thead>
    <tr>
      <th>Controller name</th>
      <th>Action name</th>
      <th>Time process</th>
      <th>View runtime</th>
      <th>Db runtime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @metrics.each do |metric| %>
      <tr>
        <td><%= metric.controller_name %></td>
        <td><%= metric.action_name %></td>
        <td><%= metric.time_process %></td>
        <td><%= metric.view_runtime %></td>
        <td><%= metric.db_runtime %></td>
        <td><%= link_to 'Show', metric %></td>
        <td><%= link_to 'Edit', edit_metric_path(metric) %></td>
        <td><%= link_to 'Destroy', metric, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

