<span><br>
  <h3 class="ui dividing header">
  Resumo das últimas ações dos usuários
  </h3>
</span>

<table class="ui single line center table">
  <thead>
    <tr>
      <th>Controller name</th>
      <th>Action name</th>
      <th>Time process</th>
      <th>View runtime</th>
      <th>Db runtime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @metrics.ordered.each do |metric| %>
      <tr>
        <td><%= metric.controller_name %></td>
        <td><%= metric.action_name %></td>
        <td><%= metric.time_process %></td>
        <td><%= metric.view_runtime %></td>
        <td><%= metric.db_runtime %></td>
        <td><%= link_to 'Show', metric %></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>